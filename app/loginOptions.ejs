<div id="loginOptionsContainer" style="display: none;">
    <div id="loginOptionsContent">
        <div class="loginOptionsMainContent">
            <h2><%- lang('loginOptions.loginOptionsTitle') %></h2>
            <div class="loginOptionActions">
                <div class="loginOptionButtonContainer">
                    <button id="loginOptionMicrosoft" class="loginOptionButton">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 23 23">
                            <path fill="#f35325" d="M1 1h10v10H1z" />
                            <path fill="#81bc06" d="M12 1h10v10H12z" />
                            <path fill="#05a6f0" d="M1 12h10v10H1z" />
                            <path fill="#ffba08" d="M12 12h10v10H12z" />
                        </svg>
                        <span><%- lang('loginOptions.loginWithMicrosoft') %></span>
                    </button>
                </div>
                <div class="loginOptionButtonContainer">
                    <button id="loginOptionCrack" class="loginOptionButton">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
                        </svg>
                        <span><%- lang('loginOptions.loginCrack') %></span>
                    </button>
                </div>
            </div>
            <div id="loginOptionCancelContainer" style="display: none;">
                <button id="loginOptionCancelButton"><%- lang('loginOptions.cancelButton') %></button>
            </div>
        </div>
    </div>
    <script src="./assets/js/scripts/loginOptions.js"></script>
    <!-- Modale pour le mode crack -->
    <div id="crackModalOverlay" style="display: none; position: fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.7); z-index:1000; justify-content:center; align-items:center;">
        <div id="crackModal" class="viking-modal" style="background:#bfa77a url('./assets/images/icons/crack.jpg') center/cover; border: 5px solid #444; border-radius:18px; padding:32px 24px; min-width:340px; display:flex; flex-direction:column; align-items:center; box-shadow:0 4px 32px #222; position:relative;">
            <h3 style="color:#643a06; margin-bottom:16px; font-family:'Avenir Heavy',serif; font-size:2.2em; letter-spacing:2px; text-shadow: 1px 2px 0 #ffffff00, 0 2px 8px #754805c9;">Pseudo Minecraft</h3>
            <input id="crackModalInput" type="text" maxlength="16" placeholder="Pseudo Minecraft" style="margin-bottom:12px; width:100%; padding:12px; border-radius:10px; border:3px solid #444; background:#e6d3b3; color:#2d1c07; text-align:center; font-size:22px; font-family:'Avenir Heavy',serif; box-shadow:0 2px 8px #222; text-shadow: 1px 1px 0 #fff;" />
            <span id="crackModalError" style="color:#b80000; font-size:15px; min-height:18px; margin-bottom:8px; display:block; font-family:'Avenir Medium'; text-shadow:1px 1px 0 #fff;"></span>
            <div style="display:flex; gap:10px; width:100%; justify-content:center;">
                <button id="crackModalValidate" class="viking-validate-btn" style="background:none; border:none; flex:1; display:flex; justify-content:center; align-items:center; cursor:pointer;">
                    <img id="crackValidateImg" src="./assets/images/icons/sevenstar_circle_hole_extended.svg" alt="Valider" style="height:48px; transition:filter 0.2s;" />
                </button>
                <button id="crackModalCancel" class="loginOptionButton" style="flex:1; background:#7a5c2e; color:#fff; font-family:'Avenir Heavy',serif; border-radius:10px; border:2px solid #444;">Annuler</button>
            </div>
        </div>
    </div>
    <style>
    .viking-modal {
        background: url('D:\LuncheurViking\code\HeliosLauncher\app\assets\images\icons\crack.jpg'), #bfa77a;
        background-size: cover;
        border: 5px solid #444;
        box-shadow: 0 4px 32px #222;
    }
    .viking-validate-btn:hover #crackValidateImg {
        filter: drop-shadow(0 0 12px #ffe08a) brightness(1.3);
        content: url('./assets/images/icons/sevenstar_extended.png');
    }
    </style>
</div>